<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:id="@+id/editor"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".editor.EditorFragment">

    <Spinner android:id="@+id/user_spinner"
             app:layout_constraintTop_toTopOf="@id/editor_write_post_button"
             app:layout_constraintBottom_toBottomOf="@id/editor_write_post_button"
             app:layout_constraintStart_toStartOf="parent"
             app:layout_constraintEnd_toStartOf="@id/editor_write_post_button"
             android:layout_width="150dp"
             android:layout_height="wrap_content"/>

    <Button
            android:id="@+id/editor_write_post_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="저장"

            android:layout_marginStart="8dp"
            app:layout_constraintStart_toEndOf="@+id/user_spinner"
            app:layout_constraintEnd_toStartOf="@+id/editor_image_post_button"
            android:layout_marginEnd="8dp"
            android:layout_marginTop="8dp"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_marginBottom="8dp"
    />

    <Button
            android:id="@+id/editor_image_post_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="이미지"

            android:layout_marginStart="8dp"
            app:layout_constraintStart_toEndOf="@+id/editor_write_post_button"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="8dp"
            android:layout_marginTop="8dp"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_marginBottom="8dp"
    />

    <EditText
            android:id="@+id/title_edit_text"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:inputType="text"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="8dp"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="8dp"
            android:layout_marginTop="60dp"
            android:hint="제목을 입력하세요."
            android:gravity="start"
            app:layout_constraintTop_toTopOf="parent"/>
    <EditText
            app:layout_constraintTop_toBottomOf="@+id/title_edit_text"
            android:layout_marginTop="10dp"
            android:layout_marginEnd="8dp"
            android:layout_marginStart="8dp"
            app:layout_constraintBottom_toBottomOf="parent"
            android:id="@+id/context_edit_text"
            android:layout_width="match_parent"
            android:inputType="text"
            android:gravity="start|top"
            android:hint="글을 입력해 보세요"
            android:layout_height="0dp"/>


    <TextView
            android:id="@+id/message"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="EditorFragment"
            android:layout_marginTop="200dp"
            app:layout_constraintBottom_toTopOf="@+id/post_image"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"/>

    <ImageView
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/message"
            app:layout_constraintBottom_toBottomOf="parent"
            android:id="@+id/post_image"
            android:layout_width="0dp" android:layout_height="0dp"

    />


</androidx.constraintlayout.widget.ConstraintLayout>
